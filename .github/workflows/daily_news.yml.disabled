name: Daily Investment News

on:
  schedule:
    # 每 30 分钟运行
    - cron: '*/30 * * * *'
  workflow_dispatch:

jobs:
  collect-and-analyze:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: pip install .

      - name: Install Playwright browsers
        run: playwright install chromium --with-deps

      - name: Run collection cycle
        env:
          CLAUDE_API_KEY: ${{ secrets.CLAUDE_API_KEY }}
          CLAUDE_BASE_URL: ${{ secrets.CLAUDE_BASE_URL }}
          SUPABASE_URL: ${{ secrets.SUPABASE_URL }}
          SUPABASE_KEY: ${{ secrets.SUPABASE_KEY }}
        run: |
          python -c "
          import asyncio
          from src.worker import run_cycle
          from src.web.database import init_db
          async def main():
              await init_db()
              await run_cycle()
          asyncio.run(main())
          "
